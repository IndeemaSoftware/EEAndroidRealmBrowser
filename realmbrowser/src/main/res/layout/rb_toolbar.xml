<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="?attr/actionBarSize"
                android:background="@color/colorBrowserPrimary"
                android:clickable="true"
                android:orientation="horizontal">

    <ImageView
        android:id="@+id/rb_toolbar_back_btn"
        android:layout_width="?attr/actionBarSize"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="start|center_vertical"
        android:background="?attr/selectableItemBackground"
        android:padding="16dp"
        android:src="@drawable/ic_arrow_back_white_48dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/rb_toolbar_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:layout_toEndOf="@+id/rb_toolbar_back_btn"
        android:layout_toStartOf="@+id/rb_toolbar_right_btn"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:paddingEnd="4dp"
        android:paddingStart="4dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"/>

    <ImageView
        android:id="@+id/rb_toolbar_right_btn"
        android:layout_width="?attr/actionBarSize"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentEnd="true"
        android:layout_gravity="end|center_vertical"
        android:background="?attr/selectableItemBackground"
        android:padding="16dp"
        android:src="@drawable/ic_more_vert_white_48dp"
        android:visibility="gone"/>


</RelativeLayout>

